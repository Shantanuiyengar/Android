<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaan.crescendo_2k18.NextRec"
    android:background="#000">

    <TextView
        android:id="@+id/nrtv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColor"
        android:text="USER-ID"
        android:textSize="25sp"
        android:layout_marginTop="149dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/nruser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nrtv1"
        android:ems="10"
        android:textColor="@color/TextColor"
        android:inputType="number"
        android:textSize="15sp" />
    P<TextView
        android:id="@+id/nrtv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColor"
        android:text="PASSWORD"
        android:textSize="25sp"
        android:layout_below="@+id/nruser"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/nrpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nrtv2"
        android:ems="10"
        android:textColor="@color/TextColor"
        android:inputType="numberPassword"
        android:textSize="15sp" />
    <RadioGroup
        android:id="@+id/radioGrpnr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="64dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radio100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:checked="false"
            android:textColor="@color/TextColor"
            android:text="100"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="true"
            android:textColor="@color/TextColor"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="50"
            />

        <RadioButton
            android:id="@+id/radio500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="true"
            android:textColor="@color/TextColor"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="500"
            />
        <RadioButton
            android:id="@+id/radio1000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="true"
            android:textColor="@color/TextColor"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="1000"
            />
    </RadioGroup>
    <Button
        android:id="@+id/nrsubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8118F"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="RECHARGE"
        android:textColor="#030202"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/radioGrpnr"
        android:layout_alignParentStart="true" />
</RelativeLayout>
