<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shaan.crescendo_2k18.CrceReg"
    android:background="#000">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#2eff00"
        android:textSize="30sp"
        android:layout_below="@+id/idft"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retype Password"
        android:textColor="#2eff00"
        android:textSize="30sp"
        android:layout_below="@+id/pass1ft"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pass1ft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:inputType="numberPassword"
        android:textColor="#2eff00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserID"
        android:textSize="30sp"
        android:textColor="#2eff00"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pass2ft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2eff00"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="numberPassword"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="number"
        android:textColor="#2eff00"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGrpft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="64dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_below="@+id/pass1ft"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/radio100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:checked="true"
            android:textColor="#2eff00"
            android:text="100"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radio50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="#2eff00"
            android:layout_weight="1"
            android:textSize="14dp"
            android:text="50"
            />
    </RadioGroup>

    <Button
        android:id="@+id/Rechargeft"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8118F"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Submit"
        android:textColor="#030202"
        android:textSize="30sp"
        android:layout_below="@+id/radioGrpft"
        android:layout_alignParentStart="true" />
</RelativeLayout>

