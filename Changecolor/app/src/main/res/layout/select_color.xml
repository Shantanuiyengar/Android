<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/color1"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_column="1"
        android:background="#ff0000"
        android:text="RED" />

    <Button
        android:id="@+id/color2"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/color1"
        android:layout_column="2"
        android:background="#3cff00"
        android:text="Green" />

    <Button
        android:id="@+id/color3"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/color4"
        android:layout_column="1"
        android:background="#ffd000"
        android:text="yellow" />

    <Button
        android:id="@+id/color4"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/color1"
        android:layout_column="2"
        android:background="#ffffff"
        android:text="white" />

    <Button
        android:id="@+id/color6"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/color1"
        android:layout_column="2"
        android:background="#e100ff"
        android:text="purple" />

    <Button
        android:id="@+id/color5"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/color3"
        android:background="#0090ff"
        android:text="blue" />
</RelativeLayout>